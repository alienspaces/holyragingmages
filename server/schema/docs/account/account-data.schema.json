{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://holyragingmages.com/schema/account/data.schema.json",
    "title": "Accounts Data",
    "description": "Payload data for accounts",
    "type": "object",
    "additionalProperties": false,
    "required": [],
    "properties": {
        "id": {
            "description": "Resource ID",
            "type": "string",
            "format": "uuid",
            "example": "a87feca8-d6f0-4794-98c7-037b30219520"
        },
        "name": {
            "description": "Account name",
            "type": "string"
        },
        "email": {
            "description": "Account email",
            "type": "string",
            "format": "email"
        },
        "provider": {
            "description": "OAuth provider",
            "enum": [
                "google",
                "apple",
                "facebook",
                "twitter",
                "github"
            ]
        },
        "provider_account_id": {
            "description": "Account identifier from provider",
            "type": "string"
        },
        "created_at": {
            "description": "Date/time the resource was created",
            "type": "string",
            "format": "date-time",
            "readOnly": true
        },
        "updated_at": {
            "description": "Date/time the resource was last updated",
            "type": "string",
            "format": "date-time",
            "readOnly": true
        }
    }
}
