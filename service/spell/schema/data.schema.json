{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://holyragingmages.com/schema/spells/data.schema.json",
    "title": "Spells Data",
    "description": "Payload data for spells",
    "type": "object",
    "additionalProperties": false,
    "required": [],
    "properties": {
        "id": {
            "description": "Resource ID",
            "type": "string",
            "format": "uuid",
            "example": "a87feca8-d6f0-4794-98c7-037b30219520"
        },
        "name": {
            "description": "Spell name",
            "type": "string",
            "example": "Blistering Touch"
        },
        "description": {
            "description": "Spell description",
            "type": "string",
            "example": "A basic spell that causes painful burns."
        },
        "created_at": {
            "description": "Date/time the resource was created",
            "type": "string",
            "format": "date-time",
            "readOnly": true
        },
        "updated_at": {
            "description": "Date/time the resource was last updated",
            "type": "string",
            "format": "date-time",
            "readOnly": true
        }
    }
}