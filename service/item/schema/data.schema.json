{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "http://holyragingmages.com/schema/items/data.schema.json",
    "title": "Items Data",
    "description": "Payload data for items",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "id"
    ],
    "properties": {
        "id": {
            "description": "Resource ID",
            "type": "string",
            "format": "uuid",
            "example": "a87feca8-d6f0-4794-98c7-037b30219520"
        },
        "name": {
            "description": "Item name",
            "type": "string",
            "example": "Broadsword"
        },
        "description": {
            "description": "Item description",
            "type": "string",
            "example": "A common one-handed basket hilted sword"
        },
        "created_at": {
            "description": "Date/time the resource was created",
            "type": "string",
            "format": "date-time",
            "readOnly": true
        },
        "updated_at": {
            "description": "Date/time the resource was last updated",
            "type": "string",
            "format": "date-time",
            "readOnly": true
        }
    }
}