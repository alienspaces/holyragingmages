#!/usr/bin/env bash

GO_VERSION=go1.13.3
if [ $(command -v gvm) ]; then
    source  ~/.gvm/scripts/gvm
    echo "Using ${GO_VERSION}"
    gvm use $GO_VERSION
fi

# start database
source ${BASH_SOURCE%/*}/start-database "local" || exit $?

# migrate database
source ${BASH_SOURCE%/*}/db-migrate-up || exit $?

# test
source ${BASH_SOURCE%/*}/test-packages || exit $?

# stop services
source ${BASH_SOURCE%/*}/stop-database "local" || exit $?
